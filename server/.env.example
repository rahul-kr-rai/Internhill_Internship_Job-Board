PORT=5000
# For MongoDB Compass / local MongoDB use:
MONGO_URI=mongodb://127.0.0.1:27017/internhill

# If you use Atlas, replace above with your Atlas connection string:
# MONGO_URI=mongodb+srv://<user>:<pass>@cluster0.mongodb.net/internhill?retryWrites=true&w=majority

JWT_SECRET=your_jwt_secret_here

# AWS S3 (only if you will upload resumes to S3). If not, leave these blank and use local file handling.
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET
S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=ap-south-1
